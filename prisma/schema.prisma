model Habit {
  id Int @id @default(autoincrement())
  habitName String
  userId String @db.VarChar(265)
  startDate DateTime
  logs LogEntry[]
}

model LogEntry {
  id Int @id @default(autoincrement())
  habitId Int
  time DateTime
  habit Habit @relation(fields: [habitId], references: [id])
  createdAt DateTime @default(now())
}